{
  "_id": "fieldPolicy/user",
  "type": "password-policy",
  "validator": [
    {
      "_id": "userPasswordPolicy-length-based-password-validator",
      "type": "length-based",
      "enabled": true,
      "maxPasswordLength": 0,
      "minPasswordLength": 8
    },
    {
      "_id": "userPasswordPolicy-repeated-characters-password-validator",
      "type": "repeated-characters",
      "enabled": true,
      "caseSensitiveValidation": true,
      "maxConsecutiveLength": 2
    },
    {
      "_id": "userPasswordPolicy-dictionary-password-validator",
      "type": "dictionary",
      "enabled": true,
      "dictionaryFile": "config/wordlist.txt",
      "caseSensitiveValidation": false,
      "minSubstringLength": 5,
      "checkSubstrings": true,
      "testReversedPassword": true
    },
    {
      "_id": "userPasswordPolicy-attribute-value-password-validator",
      "type": "attribute-value",
      "enabled": true,
      "minSubstringLength": 5,
      "checkSubstrings": true,
      "testReversedPassword": true,
      "matchAttribute": [
        "mail",
        "userName",
        "givenName",
        "sn"
      ]
    },
    {
      "_id": "userPasswordPolicy-character-set-password-validator",
      "type": "character-set",
      "enabled": true,
      "allowUnclassifiedCharacters": true,
      "characterSet": [
        "1:abcdefghijklmnopqrstuvwxyz",
        "1:ABCDEFGHIJKLMNOPQRSTUVWXYZ",
        "1:0123456789",
        "1:~!@#$%^&*()-_=+[]{}|;:,.<>/?\"'\\`"
      ]
    }
  ],
  "defaultPasswordStorageScheme": [
    {
      "_id": "PBKDF2-HMAC-SHA256"
    }
  ],
  "passwordAttribute": "password",
  "resourceCollection": "managed/user",
  "passwordHistoryCount": 1
}